<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/rbTeach"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/drawer_selector_bg"
        android:button="@null"
        android:drawableLeft="@drawable/menu_teach_nor"
        android:drawablePadding="15dp"
        android:paddingEnd="0dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:textSize="@dimen/text_medium_size"
        android:text="教学"/>

    <RadioButton
        android:id="@+id/rbMessage"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/drawer_selector_bg"
        android:button="@null"
        android:drawableLeft="@drawable/menu_message_nor"
        android:drawablePadding="15dp"
        android:paddingEnd="0dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:textSize="@dimen/text_medium_size"
        android:text="消息"/>

    <RadioButton
        android:id="@+id/rbFind"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/drawer_selector_bg"
        android:button="@null"
        android:drawableLeft="@drawable/menu_find_nor"
        android:drawablePadding="15dp"
        android:paddingEnd="0dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:textSize="@dimen/text_medium_size"
        android:text="发现"/>

    <RadioButton
        android:id="@+id/rbMine"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/drawer_selector_bg"
        android:button="@null"
        android:drawableLeft="@drawable/menu_mine_nor"
        android:drawablePadding="15dp"
        android:paddingEnd="0dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:textSize="@dimen/text_medium_size"
        android:text="我的"/>

</LinearLayout>
