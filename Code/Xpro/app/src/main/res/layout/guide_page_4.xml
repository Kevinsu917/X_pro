<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_feedback"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="guide"
        android:textSize="48dp"
        app:a_in="@dimen/parallax_speed_slow"
        app:x_in="@dimen/parallax_speed_slow"
        app:x_out="@dimen/parallax_speed_slow"
        app:y_in="@dimen/parallax_speed_slow"
        app:y_out="@dimen/parallax_speed_slow" />


    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/ivImage"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:textSize="48dp"
        android:text="hello"
        app:a_in="@dimen/parallax_speed_medium_rev"
        app:a_out="@dimen/parallax_speed_medium_rev"
        app:x_in="@dimen/parallax_speed_medium_rev"
        app:x_out="@dimen/parallax_speed_medium_rev"
        app:y_in="@dimen/parallax_speed_medium_rev"
        app:y_out="@dimen/parallax_speed_medium_rev" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="guide"
        android:textSize="48dp"
        app:a_in="@dimen/parallax_speed_slow"
        app:a_out="@dimen/parallax_speed_slow"
        app:x_in="@dimen/parallax_speed_slow"
        app:x_out="@dimen/parallax_speed_slow"
        app:y_out="@dimen/parallax_speed_slow" />

    <Button
        android:id="@+id/btnEnter"
        android:textSize="18dp"
        android:text="Enter App"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="enter"
        app:a_in="@dimen/parallax_speed_slow"
        app:x_in="@dimen/parallax_speed_slow"/>

</RelativeLayout>